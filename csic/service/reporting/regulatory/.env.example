# ============================================
# Regulatory Reporting Service - Environment Configuration
# ============================================
# Copy this file to .env and configure values
# ============================================

# ============================================
# Application Settings
# ============================================
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=reporting_admin
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_HOST=reporting-db
POSTGRES_PORT=5432
POSTGRES_DB=csic_reporting

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=reporting-redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# Kafka Configuration
# ============================================
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=csic-reporting-service
KAFKA_GROUP_ID=csic-reporting-group

# ============================================
# MinIO/S3 Storage Configuration
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_this_password_in_production
S3_BUCKET=csic-reports
S3_REGION=us-east-1

# ============================================
# WORM Storage Configuration
# ============================================
WORM_ENABLED=true
WORM_RETENTION_DAYS=2555

# ============================================
# Scheduler Configuration
# ============================================
SCHEDULER_ENABLED=true
SCHEDULER_CONCURRENCY=5

# ============================================
# Monitoring Configuration
# ============================================
METRICS_ENABLED=true
METRICS_PORT=9091
METRICS_PATH=/metrics

# ============================================
# Security Configuration
# ============================================
JWT_SECRET=change_this_jwt_secret_in_production_min_32_chars
JWT_EXPIRY=24h

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:3000

# ============================================
# Grafana Configuration
# ============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_password_in_production

# ============================================
# Elasticsearch Configuration (Optional)
# ============================================
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200

# ============================================
# External Services (Optional)
# ============================================
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_ACCESS_KEY=your_aws_access_key
# S3_SECRET_KEY=your_aws_secret_key
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1

# ============================================
# Email Configuration (Optional)
# ============================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password
# SMTP_FROM=noreply@csic.gov

# ============================================
# Logging Configuration
# ============================================
LOG_FORMAT=json
LOG_FILE_ENABLED=false
LOG_FILE_PATH=/var/log/csic-reporting

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Report Generation
# ============================================
REPORT_MAX_CONCURRENT=10
REPORT_TIMEOUT_MS=300000
REPORT_OUTPUT_DIR=/app/reports

# ============================================
# Feature Flags
# ============================================
FEATURE_SCHEDULING=true
FEATURE_TEMPLATES=true
FEATURE_EXPORT=true
FEATURE_SEARCH=true

# ============================================
# Development Overrides
# ============================================
# DEBUG=*
# DATABASE_URL=postgresql://reporting_admin:reporting@localhost:5432/csic_reporting
# REDIS_URL=redis://localhost:6379
